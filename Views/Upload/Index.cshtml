<h2>Upload a new file</h2>
<form method="post" enctype="multipart/form-data" asp-controller="Upload" asp-action="UploadFile" id="uploadForm">
    <div class="form-group">
        <div class="row">
            <label>File Type</label>
            <select name="fileType">
                @foreach (var opt in (IEnumerable<string>)@ViewData["FileOptions"]){
                     <option>@opt</option>
                }
            </select>
            <input type="file" name="files"  />
        </div>
         <div class="col-md-10">
            <button id="submitter">Upload</button>
        </div>
    </div>
</form>


